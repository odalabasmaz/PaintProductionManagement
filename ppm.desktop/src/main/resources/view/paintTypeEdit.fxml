<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="152.0" prefWidth="318.0" xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="tr.com.ppm.desktop.controller.PaintTypeEditController">
    <children>
        <GridPane layoutX="14.0" layoutY="24.0" prefHeight="96.0" prefWidth="284.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="143.0" minWidth="10.0" prefWidth="143.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="190.0" minWidth="10.0" prefWidth="141.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Label text="BOYA TÜRÜ : ">
                    <font>
                        <Font name="System Bold" size="14.0"/>
                    </font>
                </Label>
                <TextField fx:id="txtPaintType" prefHeight="25.0" prefWidth="193.0" GridPane.columnIndex="1"/>
                <Button fx:id="btnSave" mnemonicParsing="false" onAction="#save" prefHeight="25.0" prefWidth="130.0"
                        text="KAYDET" GridPane.rowIndex="1"/>
                <Button fx:id="btnClose" mnemonicParsing="false" onAction="#close" prefHeight="25.0" prefWidth="126.0"
                        text="VAZGEÇ" textAlignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            </children>
        </GridPane>
    </children>
</AnchorPane>
