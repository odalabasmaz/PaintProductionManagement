<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.Group?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import java.net.URL?>
<Group xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
       fx:controller="tr.com.ppm.desktop.controller.PaintTypeEditController">
    <AnchorPane id="AnchorPane" layoutX="10.0" layoutY="10.0" prefHeight="409.0" prefWidth="469.0">
        <GridPane layoutX="35.0" layoutY="55.0">
            <Label fx:id="lblHeader" text="BOYA TÜRÜ TANIMLAMA" GridPane.columnSpan="4"
                   GridPane.halignment="CENTER">
                <font>
                    <Font name="System Bold" size="26.0"/>
                </font>
            </Label>
            <Label text="Boya Türü :" GridPane.rowIndex="2"/>
            <TextField fx:id="tfPaintType" GridPane.columnSpan="4" GridPane.rowIndex="3">
                <opaqueInsets>
                    <Insets/>
                </opaqueInsets>
            </TextField>
            <Button fx:id="btnAdd" mnemonicParsing="false" onAction="#add" text="Kaydet"
                    GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="5"/>
            <Button fx:id="btnClose" mnemonicParsing="false" onAction="#close" text="İptal"
                    GridPane.columnIndex="2" GridPane.columnSpan="2" GridPane.rowIndex="5"/>
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
        </GridPane>
        <stylesheets>
            <URL value="@../style/MainStyle.css"/>
            <URL value="@../style/popUp.css"/>
        </stylesheets>
    </AnchorPane>
</Group>