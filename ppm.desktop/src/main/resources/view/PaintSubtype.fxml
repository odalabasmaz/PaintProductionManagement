<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane fx:id="AnchorPane" stylesheets="@../style/MainStyle.css" xmlns="http://javafx.com/javafx/8.0.102"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="tr.com.ppm.desktop.controller.PaintTypeController">
    <BorderPane fx:id="BorderPane" prefHeight="600" prefWidth="1000" AnchorPane.bottomAnchor="0.0"
                AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <top>
            <fx:include source="menu.fxml"/>
        </top>
        <center>
            <VBox>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="314.0" prefWidth="694.0">
                    <GridPane layoutX="14.0" layoutY="14.0">
                        <Label text="Boya Türü :" GridPane.rowIndex="0"/>
                        <ComboBox fx:id="cbPaintType" prefHeight="31.0" prefWidth="402.0"
                                  promptText="Boya Türü Seçiniz.." GridPane.columnSpan="3" GridPane.rowIndex="1"/>
                        <Label text="Boya Alt Türü :" GridPane.rowIndex="3"/>
                        <TextField fx:id="tfPaintSubtype" prefHeight="31.0" prefWidth="402.0"
                                   GridPane.columnSpan="3" GridPane.rowIndex="4"/>
                        <ButtonBar nodeOrientation="RIGHT_TO_LEFT" prefHeight="40.0" prefWidth="200.0"
                                   GridPane.columnSpan="3" GridPane.rowIndex="6">
                            <buttons>
                                <Button fx:id="btnClean" mnemonicParsing="false" onAction="#clean" text="Temizle"/>
                                <Button fx:id="btnQuery" mnemonicParsing="false" onAction="#query" text="Sorgula"/>
                            </buttons>
                        </ButtonBar>
                        <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            <RowConstraints/>
                        </rowConstraints>
                    </GridPane>
                </AnchorPane>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="321.0" prefWidth="687.0">
                    <VBox layoutX="14.0" layoutY="7.0" prefHeight="240.0" prefWidth="512.0">
                        <TableView fx:id="tvPaintSubtype">
                            <columns>
                                <TableColumn fx:id="tcPaintType" prefWidth="255.0" text="BOYA TÜRÜ"/>
                                <TableColumn fx:id="tcPaintSubtype" prefWidth="254.0" text="BOYA ALT TÜRÜ"/>
                            </columns>
                        </TableView>
                        <ButtonBar nodeOrientation="RIGHT_TO_LEFT" prefHeight="40.0" prefWidth="200.0">
                            <buttons>
                                <Button fx:id="btnEdit" mnemonicParsing="false" onAction="#edit" text="Düzenle"/>
                                <Button fx:id="btnDelete" mnemonicParsing="false" onAction="#delete" text="Sil"/>
                                <Button fx:id="btnAdd" mnemonicParsing="false" onAction="#add" text="Ekle"/>
                            </buttons>
                        </ButtonBar>
                    </VBox>
                </AnchorPane>
            </VBox>
        </center>
    </BorderPane>
</AnchorPane>