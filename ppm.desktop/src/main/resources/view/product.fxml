<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane prefHeight="540.0" prefWidth="733.0" stylesheets="@../style/MainStyle.css"
            xmlns="http://javafx.com/javafx/8.0.102" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tr.com.ppm.desktop.controller.ProductController">
    <top>
        <fx:include source="menu.fxml"/>
    </top>
    <center>
        <SplitPane dividerPositions="0.5" orientation="VERTICAL" prefHeight="200.0" prefWidth="160.0"
                   BorderPane.alignment="CENTER">
            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="100.0" prefWidth="160.0">
                <GridPane layoutX="35.0" layoutY="55.0">
                    <Label text="Adı :" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <TextField fx:id="tfName" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="0"/>
                    <Label text="Kodu :" GridPane.columnIndex="4" GridPane.rowIndex="0"/>
                    <TextField fx:id="tfCode" GridPane.columnIndex="5" GridPane.columnSpan="2" GridPane.rowIndex="0"/>

                    <Label text="Renk Adı :" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                    <TextField fx:id="tfColorName" GridPane.columnIndex="1" GridPane.columnSpan="2"
                               GridPane.rowIndex="1"/>
                    <Label text="Renk Kodu :" GridPane.columnIndex="4" GridPane.rowIndex="1"/>
                    <TextField fx:id="tfColorCode" GridPane.columnIndex="5" GridPane.columnSpan="2"
                               GridPane.rowIndex="1"/>
                    <Label text="Boya Türü :" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                    <ComboBox fx:id="cbPaintType" promptText="Boya Türü seçiniz.." GridPane.columnIndex="1"
                              GridPane.columnSpan="2" GridPane.rowIndex="2"/>
                    <Label text="Boya Alt Türü :" GridPane.columnIndex="4" GridPane.rowIndex="2"/>
                    <ComboBox fx:id="cbPaintSubtype" promptText="Boya Alt Türü seçiniz.." GridPane.columnIndex="5"
                              GridPane.columnSpan="2" GridPane.rowIndex="2"/>
                    <Label text="Yoğunluk :" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                    <TextField fx:id="tfDensity" GridPane.columnIndex="1" GridPane.columnSpan="2"
                               GridPane.rowIndex="3"/>
                    <ButtonBar nodeOrientation="RIGHT_TO_LEFT" prefHeight="40.0" prefWidth="200.0" GridPane.columnSpan="3" GridPane.rowIndex="5">
                        <buttons>
                            <Button fx:id="btnClean" mnemonicParsing="false" onAction="#clean" text="Temizle" />
                            <Button fx:id="btnQuery" mnemonicParsing="false" onAction="#query" text="Sorgula" />
                        </buttons>
                    </ButtonBar>
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                </GridPane>
            </AnchorPane>
            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="100.0" prefWidth="160.0">
                <VBox prefHeight="247.0" prefWidth="727.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                      AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <children>
                        <TableView fx:id="tvProduct" prefHeight="200.0" prefWidth="542.0">
                            <columns>
                                <TableColumn fx:id="tcName" text="Adı"/>
                                <TableColumn fx:id="tcCode" text="Kodu"/>
                                <TableColumn fx:id="tcColor" text="Renk"/>
                                <TableColumn fx:id="tcColorCode" text="Renk Kodu"/>
                                <TableColumn fx:id="tcDensity" text="Yoğunluk"/>
                                <TableColumn fx:id="tcPaintType" text="Boya Türü"/>
                                <TableColumn fx:id="tcPaintSubtype" text="Boya Alt Türü"/>
                                <TableColumn fx:id="tcDescription" text="Açıklama"/>
                            </columns>
                        </TableView>
                        <ButtonBar nodeOrientation="RIGHT_TO_LEFT" prefHeight="40.0" prefWidth="200.0">
                            <buttons>
                                <Button fx:id="btnEdit" mnemonicParsing="false" onAction="#edit" text="Düzenle" />
                                <Button fx:id="btnDelete" mnemonicParsing="false" onAction="#delete" text="Sil" />
                                <Button fx:id="btnAdd" mnemonicParsing="false" onAction="#add" text="Ekle" />
                            </buttons>
                        </ButtonBar>
                    </children>
                </VBox>
            </AnchorPane>
        </SplitPane>
    </center>
</BorderPane>
