<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane prefHeight="532.0" prefWidth="574.0" stylesheets="@../style/MainStyle.css"
            xmlns="http://javafx.com/javafx/8.0.102" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tr.com.ppm.desktop.controller.PaintTypeController">
    <top>
        <fx:include source="menu.fxml"/>
    </top>
    <center>
        <SplitPane dividerPositions="0.5" orientation="VERTICAL" prefHeight="200.0" prefWidth="368.0"
                   BorderPane.alignment="CENTER">
            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="100.0" prefWidth="572.0">
                <GridPane layoutX="35.0" layoutY="55.0">
                    <Label text="Boya Türü :" GridPane.rowIndex="0"/>
                    <TextField fx:id="tfPaintType" GridPane.columnSpan="4" GridPane.rowIndex="1">
                        <opaqueInsets>
                            <Insets/>
                        </opaqueInsets>
                    </TextField>
                    <Button fx:id="btnQuery" mnemonicParsing="false" onAction="#query" prefHeight="25.0"
                            prefWidth="109.0" text="Sorgula" GridPane.columnIndex="0" GridPane.halignment="LEFT"
                            GridPane.rowIndex="3"/>
                    <Button fx:id="btnClean" mnemonicParsing="false" onAction="#clean" prefHeight="25.0"
                            prefWidth="110.0" text="Temizle" GridPane.columnIndex="1" GridPane.halignment="LEFT"
                            GridPane.rowIndex="3"/>
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                </GridPane>
            </AnchorPane>
            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="100.0" prefWidth="160.0">
                <TableView fx:id="tblViewPaintType" layoutX="14.0" layoutY="7.0" prefHeight="200.0" prefWidth="326.0">
                    <columns>
                        <TableColumn fx:id="tblColumnPaintType" prefWidth="325.0" text="BOYA TÜRÜ"/>
                    </columns>
                </TableView>
                <Button fx:id="btnAdd" layoutX="14.0" layoutY="235.0" mnemonicParsing="false" onAction="#add"
                        prefHeight="25.0" prefWidth="80.0" text="Yeni Kayıt"/>
                <Button fx:id="btnEdit" layoutX="137.0" layoutY="235.0" mnemonicParsing="false" onAction="#edit"
                        prefHeight="25.0" prefWidth="80.0" text="Düzenle"/>
                <Button fx:id="btnDelete" layoutX="260.0" layoutY="235.0" mnemonicParsing="false" onAction="#delete"
                        prefHeight="25.0" prefWidth="80.0" text="Sil"/>
            </AnchorPane>
        </SplitPane>
    </center>
</BorderPane>
